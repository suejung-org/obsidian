{
  "compilerOptions": {
    "composite": true,
    "module": "NodeNext",
    "target": "ES2022",
    "allowJs": false,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strict": true,
    "rootDir": "src",
    "declaration": true,
    "sourceMap": true,
    "noEmit": true
  },
  "exclude": ["node_modules", "**/node_modules/*", "dist"],
  "include": ["src"]
}
